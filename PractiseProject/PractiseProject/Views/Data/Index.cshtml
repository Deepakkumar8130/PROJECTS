@{
}
<h1>Welcome to the Dashboard</h1>
<hr />
<form>
	<div class="text-end mb-2">
		<button asp-controller="Data" asp-action="CreateOrEdit" class="btn btn-primary">Add Records</button>
	</div>

<table class="table table-bordered table-striped">
	<thead class="bg-dark text-light">
		<tr>
			<th>Sno.</th>
			<th>Name</th>
			<th>Email</th>
			<th>Date</th>
			<th>Age</th>
			<th>Gender</th>
			<th>Current_Address</th>   
			<th>Permanent_Address</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
			@if(Model != null && Model.Any())
			{
				int i = 0;
				
				@foreach(var item in Model)
				{
					i++;
					<tr>
						<td>@i.</td>
						<td>@item.Name</td>
						<td>@item.Email</td>
						<td>@item.Date</td>
						<td>@item.Age</td>
						<td>@item.Gender</td>
						<td>@item.Current_Address</td>
						<td>@item.Permanent_Address</td>
						<td>
							<div class="d-flex flex-grow-1">
								<button asp-action="CreateOrEdit" asp-controller="Data" asp-route-id="@item.Id" class="btn btn-success m-1">Edit</button>
								<button asp-action="Delete" asp-controller="Data" asp-route-id="@item.Id" class="btn btn-danger m-1">Delete</button>
							</div>
						</td>
					</tr>
				}
			}
	</tbody>
</table>
</form>
