<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Manage Users</h4><button class=" float-right btn btn-sm btn-info" id="btnAdd">+ Add New</button>
        </div>
        <div class="card-body">
            <table class="table table-bordered" id="tblUsers">
                <thead>
                    <tr>
                        <th>SNO.</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Mobile</th>
                        <th>Manager</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>




<!-- modal -->
<div class="modal fade" id="modalAddUser">
    <div class="modal-dialog">
        <div class="modal-content" style="width:52pc; margin-left:-189px">
            <div class="modal-header">
                <h4 class="modal-title">Add New user</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-5">
               
                <form id="UserForm">  
                    <div class="row">
                        <input type="hidden" class="form-control" id="hdnUserId" value="0" />
                        <div class="col-6">
                            <div class="form-group" id="formGroupUserName">
                                <label>User Name</label>
                                <input type="text" class="form-control" id="txtUserName" />
                                <span id="errUserName"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group" id="formGroupEmailAddress">
                                <label>Email Address</label>
                                <input type="text" class="form-control" id="txtEmailAddress" />
                                <span id="errEmailAddress"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        
                        <div class="col-6">
                            <div class="form-group" id="formGroupMobileNumber">
                                <label>Mobile Number</label>
                                <input type="number" class="form-control" min="0" id="txtMobileNumber" />
                                <span id="errMobileNumber"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group" id="formGroupManager">
                                <label>Manager</label>
                                <select class="form-control" id="txtClaimReason">
                                    <option value="">Select</option>
                                    <option value="Travel">Travel</option>
                                    <option value="Food">Food</option>
                                    <option value="Petrol">Petrol</option>
                                    <option value="Mobile Recharge">Mobile Recharge</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span id="errManager"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group" id="formGroupPassword">
                                <label>Password</label>
                                <input type="password" class="form-control" id="txtPassword"/>
                                <small class="form-text text-muted">File format: PDF, JPG, PNG or JPEG</small>
                                <span id="errPassword"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group" id="formGroupConfirmPassword">
                                <label>Confirm Password</label>
                                <input type="text" class="form-control" id="txtConfirmPassword"/>
                                <span id="errConfirmPassword"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-around m-3">
                        <button type="button" class="btn w-25 btn-sm btn-primary p-2" id="btnUserFormReset">Refersh</button>
                        <button type="button" class="btn w-25 btn-sm btn-success p-2" id="btnUserSubmit">Submit</button>
                    </div>
                </form>              
                
            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->


<script src="~/js/user/manageuser.js"></script>