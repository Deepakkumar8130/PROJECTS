<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Manage Roles</h4><button class=" float-right btn btn-sm btn-info" id="btnAddRole">+ Add New</button>
        </div>
        <div class="card-body">
            <table class="table table-bordered" id="tblRoles">
                <thead>
                    <tr>
                        <th>SNO.</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>




<!-- modal -->
<div class="modal fade" id="modalAddRole">
    <div class="modal-dialog">
        <div class="modal-content" style="width: 27pc;margin-left: 20px;">
            <div class="modal-header">
                <h4 class="modal-title">Add New User</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-5">
                <form id="RoleForm">
                    <div class="row">
                        <div class="w-100">
                            <input type="hidden" class="form-control" id="hdnRoleId" value="0" />
                            <div class="form-group" id="formGroupRoleName">
                                <label>Role Name <span class="mandatory">*</span></label>
                                <input type="text" class="form-control" id="txtRoleName" />
                                <span id="errRoleName"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="w-100">
                            <div class="form-group" id="formGroupStatus">
                                <label>Status <span class="mandatory">*</span></label>
                                <select class="form-control" id="ddlStatus">
                                    <option value="-1">Select</option>
                                    <option value="1">Active</option>
                                    <option value="0">InActive</option>
                                </select>
                                <span id="errStatus"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="w-100 text-center m-3">
                            <button type="button" class="btn w-50 btn-sm btn-success p-2" id="btnRoleSubmit">Submit</button>
                        </div>
                    </div>
                    
                </form>
            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
<script src="~/js/role/managerole.js"></script>