@model IEnumerable<EmployeeVM>
@{
}
<style>
    #crd {
        overflow-x: scroll;
    }

    .card {
        width: 150%
    }

    img {
        border-radius: 50%;
        height: 100px;
        width: 100px;
    }

    #pimg {
        text-align: center;
    }
    #txtFile{

    }
    
    #radio{
        display: flex;
        margin-bottom: 5px;
        padding: 2px;
        justify-content: space-around;
    }
</style>

<div class="row">
    <div class="col-8">
        <div class="card">
            <div class="card-header">
                <h2>List of Employees</h2>
            </div>
            <div class="card-body " id="crd">
                <div class="text-end mb-2">
                    <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#exampleModal">Add Employee</button>
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>SNO.</th>
                            <th>PROFILE</th>
                            <th>NAME</th>
                            <th>AGE</th>
                            <th>GENDER</th>
                            <th>COUNTRY</th>
                            <th>STATE</th>
                            <th>CITY</th>
                            <th>ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int i = 0;
                            foreach (var obj in Model)
                            {
                                i++;
                                <tr>
                                    <td>@i</td>
                                    <td>
                                        <div id="pimg">
                                            <img src="~/image/@obj.profileImg" alt="Profile Image" />
                                        </div>
                                    </td>
                                    <td>@obj.name</td>
                                    <td>@obj.age</td>
                                    <td>@obj.gender</td>
                                    <td>@obj.country</td>
                                    <td>@obj.state</td>
                                    <td>@obj.city</td>
                                    <td>
                                        action
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>
                                    <span>Data Not Available...</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Add Employee</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" action="@Url.Action("Create", "Employee")" enctype="multipart/form-data">
                    <input type="hidden" id="txtId" name="id"/>
                    <div class="form-floating py-2 col-12" id="txtFileGroup">
                        <input type="file" class="form-control border-0 shadow" id="txtFile" name="profileImg" />
                        <label class="ms-3">Choose Profile Pic</label>
                        <span id="errProfilePic"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input type="text" class="form-control border-0 shadow"  id="txtName" name="name"/>
                        <label class="ms-3">Employee Name</label>
                        <span id="errName"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input type="text" class="form-control border-0 shadow" id="txtEmail" name="email" />
                        <label class="ms-3">Employee Email</label>
                        <span id="errEmail"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input type="number" class="form-control border-0 shadow"  id="txtAge" name="age"/>
                        <label class="ms-3">Employee Age</label>
                        <span id="errAge"></span>
                    </div>
                   

                    <div class="form-floating py-2 col-12">
                        <div id="radio">
                            <div class="radio-group">
                                <label>Gender : </label>
                            </div>
                            <div class="radio-group">
                                <input type="radio" id="male" name="gender" value="Male" class="form-check-input">
                                <label for="male" class="radio-label">Male</label>
                            </div>
                            <div class="radio-group">
                                <input type="radio" id="female" name="gender" value="Female" class="form-check-input">
                                <label for="female" class="radio-label">Female</label>
                            </div>
                            <div class="radio-group">
                                <input type="radio" id="other" name="gender" value="Other" class="form-check-input">
                                <label for="other" class="radio-label">Other</label>
                            </div>
                        </div>
                        <span id="errGender"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <select class="form-control border-0 shadow" id="ddlCountry" name="country">
                            <option value="">Select</option>
                        </select>
                        <label class="ms-3">Country</label>
                        <span id="errCountry"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <select class="form-control border-0 shadow" id="ddlState" name="state">
                            <option value="">Select</option>
                        </select>
                        <label class="ms-3">State</label>
                        <span id="errState"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <select class="form-control border-0 shadow" id="ddlCity" name="city">
                            <option value="">Select</option>
                        </select>
                        <label class="ms-3">City</label>
                        <span id="errCity"></span>
                    </div>
                    <div class="form-floating mt-3 text-center">

                        <input type="submit" class="btn btn-info w-50" id="btnSubmit" value="Submit" />
                    </div>
                    <div class="form-group mt-3">
                        <p id="msg"></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/js/custom.js"></script>